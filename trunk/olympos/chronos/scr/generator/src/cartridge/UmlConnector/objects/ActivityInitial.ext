cwm::ActivityInitial convertToCwm(uml::InitialNode c) :
	let un = new cwm::ActivityInitial : (
		un.setId(c.getId()) ->
		un.setName(c.name) ->
		un.setNotes(c.getComment()) ->
/*
		un.setAuthor(c.getTaggedValue("Chronos::ActivityInitial", "Author").toString()) ->
		un.setStatus(c.getTaggedValue("Chronos::ActivityInitial", "Status").toString()) ->
		un.setAlias(c.getTaggedValue("Chronos::ActivityInitial", "Alias").toString()) ->
		un.setVersion(c.getTaggedValue("Chronos::ActivityInitial", "Version").toString()) ->

		un.setCreated(c.getTaggedValue("Chronos::ActivityInitial", "created").toString()) ->
		un.setCreator(c.getTaggedValue("Chronos::ActivityInitial", "creator").toString()) ->
