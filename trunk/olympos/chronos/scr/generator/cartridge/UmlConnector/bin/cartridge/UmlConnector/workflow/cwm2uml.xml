<?xml version="1.0" encoding="utf-8"?>
<project name="cwm2uml" default="packageZip">
	<!-- set as workflow parameters
	<property name="zip.target.file" value="oaw123.tmp" />
	<property name="basePath.dir" value="." />
	<property name="model.file" value="oaw234.tmp" />
	-->
	
	<target name="packageZip">
		<available property="isAvail" file="${basePath.dir}/${model.file}" />
		<echo message="isAvail: ${isAvail}" />		

		<zip 
			destfile="${zip.target.file}">
			<zipfileset dir="${basePath.dir}" includes="metamodel/chronos.profile.uml" fullpath="chronos.profile.uml"/>
			<zipfileset dir="${basePath.dir}" includes="metamodel/ouranos.profile.uml" fullpath="ouranos.profile.uml"/>
			<zipfileset file="${basePath.dir}/${model.file}" fullpath="cwm-export.uml"/>
		</zip>
	</target>
</project>
