<?xml version="1.0" encoding="UTF-8"?>
<!-- Defines if this cartridge is part of the basic ChiGen-->
<cartridgeinfo system="false">
<!-- the name of the cartridge, will appear in the web front end -->
	<name>Project Plan</name>
<!-- a verbose description of the cartridge-->
	<description>
		this cartridge generates a draft project plan in MS Project XML compatible format. this can be also used in OpenProj. It takes as input Usecases, Actors and features of non functional requirements (tagged type with technical in model)  
	</description>
<!-- additional cartridges required by this-->	
	<dependencies>
		<dependency>ChronosCommon</dependency>
	</dependencies>
	<properties>
		<!--codeGenerator: true will appear in the list of available generators in the CWM -->	
		<property name="codeGenerator">true</property>
			<!--Name of the file that contains the workflow -->	
		<property name="workflow">workflow/projectplan.oaw</property>
		<property name="targetPlatform">openProj/MS Project</property>
	</properties>
</cartridgeinfo>