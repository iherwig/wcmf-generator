import uml;
import Chronos;

extension common::util;
extension common::umlutils;

extension cartridge::ChronosCheck::domain::ChiValue;

/**
 * Check for invalid names
 */
context Chronos::ChiValue if Chronos::ChiNode.isInstance(this.owner) ERROR
	"Found not allowed value name '"+this.name+"' in class "+this.getOwningClass().name :
	this.hasValidName()
;

context Chronos::ChiValue ERROR
	"Class attribute name may not be NULL or empty: Class " + ((uml::Class) this.owner).name:
	this.hasName()
;
