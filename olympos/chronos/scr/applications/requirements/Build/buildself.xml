<project default="jar">
	<!--
	Builds the custom tasks included in this project.
	-->
	
	<target name="clean">
		<delete dir="buildself" />
	</target>

	<target name="compile">
		<mkdir dir="buildself/classes" />
		<javac srcdir="src" destdir="buildself/classes" />
	</target>

	<target name="jar" depends="clean, compile">
		<jar destfile="lib/ChronosBuildAnt.jar" basedir="buildself/classes">
		</jar>
	</target>
</project>
